<h2>Edit Your Profile</h2>

<%= form_with model: @profile, local: true do |f| %>
  <div>
    <%= f.label :full_name %><br>
    <%= f.text_field :full_name %>
  </div>

  <div>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>

  <div>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </div>

  <div>
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
    <% if @profile.avatar.attached? %>
      <%= image_tag @profile.avatar.variant(resize: "100x100") %>
    <% end %>
  </div>

  <%= f.submit "Update Profile" %>
<% end %>
